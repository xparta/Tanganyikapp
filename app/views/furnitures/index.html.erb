<p id="notice"><%= notice %></p>

<h1>Furnitures</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Size</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @furnitures.each do |furniture| %>
      <tr>
        <td><%= furniture.name %></td>
        <td><%= furniture.description %></td>
        <td><%= furniture.size %></td>
        <td><%= furniture.price %></td>
        <td><%= link_to 'Show', furniture %></td>
        <td><%= link_to 'Edit', edit_furniture_path(furniture) %></td>
        <td><%= link_to 'Destroy', furniture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Furniture', new_furniture_path %>
